main-color = #FF8000
dark       = #3A4A59
light      = rgba(dark, .6)
superlight = rgba(dark, .1)

def-font   = "Neue Haas Unica W1G"
sec-font   = "Gotham"
WIDTH      = 320px

thin-border(color = superlight, dir = 'bottom')
  &:after
    border-bottom 1px color solid
    absolute left bottom right
    content ""; height 1px
    box-sizing content-box
    transform scaleY(0.5)
    transition .25s

icon(ico)
  background-image url('img/' + ico + '.svg')
  &.active
    background-image url('img/' + ico + '-active.svg')
