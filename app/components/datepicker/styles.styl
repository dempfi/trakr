@import '../../styles/constants'

.-datepicker
  width 100%
  text-align center
  display none
  &.active
    display block
  .header
    height 100px

  ul
    width 100%
    li
      display inline-block
      height  30px
      width 14.285714%
      line-height 30px
      cursor default
      border-radius 3px
      &:hover
        background rgba(FLUSH, .05)
        color FLUSH
      &.other-month
        visibility hidden
      &.inactive
        color SLATE
      &.active
        color FLUSH
        box-shadow inset 0 0 0 1px FLUSH
        background rgba(FLUSH, .1)

.input
  height 20px
  width 50px
  background red
  display: block