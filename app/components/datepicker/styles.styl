@import '../../styles/constants'

.datepicker
  &.isOpen
    .calendar
      max-height 500px
      visibility visible
  .calendar
    border-bottom 1px solid superlight
    box-shadow 0 -1px superlight
    z-index 0; margin-top -1px
    width 100%; max-height 0
    background #FAFAFA
    visibility hidden
    transition .25s
    overflow hidden
    padding 0 20px
    text-align center
    .title
      height 19px; width 100%
      position relative
      margin-top 15px
      .month-title
        font 13px/19px def-font
        color black
      .prev
      .next
        background-image url('img/dp-prev.svg')
        background-position center center
        background-repeat no-repeat
        width (100% / 7); height 100%
        absolute top left
        z-index 1
      .next
        background-image url('img/dp-next.svg')
        right 0; left auto
    .weekdays
      font 500 11px/17px def-font
      width 100%; height 17px
      text-transform uppercase
      margin-top 18px
      color light
      span
        display inline-block
        width 14.285714%
        line-height 17px

    .month
      margin-top 6px
      margin-bottom 20px
      li
        display inline-block
        width (100% / 7)
        line-height 30px
        cursor default
        height 30px
        color black
        &:hover
          background rgba(main-color, .05)
          color main-color
        &.other-month
          visibility hidden
        &.inactive
          color light
        &.active
          color main-color
          box-shadow inset 0 0 0 2px main-color
          font-weight 500
