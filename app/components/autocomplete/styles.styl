@import '../../styles/constants'

.autocomplete
  &.isOpen
    .options
      max-height 240px
      visibility visible
      overflow scroll
  .options
    overflow hidden
    visibility hidden
    transition .25s
    background #FAFAFA
    width 100%; max-height 0
    border-bottom 1px solid superlight
    box-shadow 0 -1px superlight
    z-index 0; margin-top -1px
    transition .25s
    li
      width 100%
      height 40px
      padding 0 20px
      line-height 40px
      position relative
      font-weight 500
      &:before
        content ''
        absolute left 20px bottom right 20px
        height 1px
        background superlight
      &.isActive
        box-shadow inset 0 0 0 2px main-color
        &:before
          display none
