@import '../../styles/constants'

.autocomplete
  transition .25s
  margin-bottom 0
  input
    z-index 1
  &.isOpen
    margin-bottom 240px
    .options
      height 240px
      visibility visible
      overflow scroll
  .options
    overflow hidden
    visibility hidden
    absolute left -20px top 60px
    transition .25s
    background #FAFAFA
    width 320px
    height 0px
    border-bottom 1px solid SOLITUDE
    box-shadow 0 -1px SOLITUDE
    z-index 0
    li
      width 100%
      height 40px
      padding 0 20px
      line-height 40px
      position relative
      &:before
        content ''
        absolute left 20px bottom right 20px
        height 1px
        background SOLITUDE
      &.isActive
        box-shadow inset 0 0 0 2px FLUSH
        &:before
          display none
