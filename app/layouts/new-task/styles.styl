@import '../../styles/constants'

.new-task
  background white
  width 100%

  .row
    height 60px
    box-shadow inset 0 -1px SOLITUDE
    display block
    &.-half
      width 50%
    input
      width 100%
      height 100%
      border none
      font-size 14px
      font-weight 500
      font-family FONT
      padding-top 31px
      padding-bottom 12px
      line-height 17px
      &:focus
        border-bottom 2px solid FLUSH
        outline none
      &:focus + span
      &:valid + span
        top 14px
        font-size 12px

    span
      absolute left top 22px
      color SLATE
      font-size 14
      transition all 0.2s