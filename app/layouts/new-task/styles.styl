@import '../../styles/constants'

main.new-task
  padding 10px 20px
  label
    height 60px
    box-shadow inset 0 -1px SOLITUDE
    display block
    position  relative
    input
      width 100%
      height 100%
      border none
      font-size 14px
      font-weight 500
      font-family FONT
      padding-top 31px
      padding-bottom 12px
      line-height 17px
      color OXFORD
      &[type='range']
        margin 0
      &:focus
        border-bottom 2px solid FLUSH
        outline none
        padding-bottom 10px

      &:focus + .label
      &:valid + .label
        top 14px
        font-size 12px

    .label
      absolute left top 22px
      color SLATE
      font-size 14
      transition all 0.2s

  .two-inputs
    label
      width 50%
      display inline-block
      vertical-align top
      &:first-child
        border-right 1px solid SOLITUDE
      &:last-child
        padding-left 20px
        .label
          left 20px
  .add-task
    absolute left bottom
    width 100%
    height 54px
    background white
    color FLUSH
    font-size 22px
    font-weight 300
    font-family FONT
    border none
    border-top 1px solid SOLITUDE

input[type=range]
  -webkit-appearance none
  margin 20px/2 0
  width 100%

  &:focus
    outline: none

  &::-webkit-slider-runnable-track
  // &::-moz-range-track
    width 100%
    height 2px
    cursor pointer
    animate 0.2s
    background SOLITUDE

  &::-webkit-slider-thumb
  // &::-moz-range-thumb
    height 20px
    width 20px
    border-radius 100%
    cursor pointer
    position  relative
    background-image url('img/track-dot.svg')
    background-color white
    background-repeat no-repeat
    background-position center center
    box-shadow 0 1px 5px SOLITUDE, 0 0 0 1px rgba(black,.1)
    margin-top -9px
    -webkit-appearance none

  &:focus::-webkit-slider-runnable-track
    background: lighten(SOLITUDE, 5%)
