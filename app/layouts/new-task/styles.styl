@import '../../styles/constants'

.new-task
  background white
  width 100%

  .row
    height 60px
    box-shadow inset 0 -1px SOLITUDE
    display block
    position  relative
    input
      width 100%
      height 100%
      border none
      font-size 14px
      font-weight 500
      font-family FONT
      padding-top 31px
      padding-bottom 12px
      line-height 17px
      &[type='range']
        margin 0
      &:focus
        border-bottom 2px solid FLUSH
        outline none
        padding-bottom 10px

      &:focus + .placeholder
      &:valid + .placeholder
        top 14px
        font-size 12px

    .placeholder
      absolute left top 22px
      color SLATE
      font-size 14
      transition all 0.2s

  .two-inputs
    .row
      width 50%
      display inline-block
      vertical-align top
      &:first-child
        border-right 1px solid SOLITUDE
      &:last-child
        padding-left 20px
        .placeholder
          left 20px


track-color = SOLITUDE
thumb-color = FLUSH

thumb-radius = 100%
thumb-height = 20px
thumb-width = 20px

track-width = 100%
track-height = 2px
track-border-width = 1px

track-radius = 5px
contrast = 5%

track()
  width track-width
  height track-height
  cursor pointer
  animate 0.2s
  background: track-color
  border-radius: track-radius

thumb()
  height thumb-height
  width thumb-width
  border-radius thumb-radius
  cursor pointer
  position  relative
  background url('img/track-dot.svg') no-repeat center center WHITE
  border 1px solid SOLITUDE
  box-shadow 0 1px 5px SOLITUDE


input[type=range]
  -webkit-appearance none
  margin thumb-height/2 0
  width track-width

  &:focus
    outline: none

  &::-webkit-slider-runnable-track
    track()

  &::-webkit-slider-thumb
    thumb()
    -webkit-appearance: none
    margin-top: ((track-border-width * 2 + track-height) / 2) - (thumb-height / 2)

  &:focus::-webkit-slider-runnable-track
    background: lighten(track-color, contrast)

  &::-moz-range-track
    track()
  &::-moz-range-thumb
    thumb()