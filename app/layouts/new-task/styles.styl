@import '../../styles/constants'

header.new-task
  .action
    background-image: url('img/close.svg')

main.new-task
  transition .25s
  overflow hidden
  label
    height 65px
    display block
    position relative
    .project-item
      position relative
      .name
        color light
        font-weight 400
        white-space nowrap
        text-overflow ellipsis
        max-width 210px
        overflow hidden
        display inline-block
      .symbol
        absolute right top
        color light
        font-weight 500
    .project-not-found
      display table
      font-size 18px
      font-weight 300
      color light
      width 100%
      padding 0 30px
      text-align center
      height 100%
      > div
        display table-cell
        vertical-align middle
      strong
        color dark
        font-weight 500
    input
      width 100%; height 100%
      padding 35px 0 14px 20px
      font 600 13px/16px sec-font
      color black
      &[type='range']
        margin 0
      &:focus
        outline none

      &:focus + .label
      &:valid + .label
        font-size 13px; font-weight 400
        top 10px

      &:focus ~ .line
        thin-border main-color

    .label
      absolute left 20px top 21px
      font-size 16px; font-weight 300
      transition all 0.2s
      color light
      height 19px; line-height 19px;

    .line
      absolute left bottom right
      height 0
      thin-border()

    &.range
      height 80px

  .two-inputs
    label
      width 50%
      display inline-block
      vertical-align top
      &:first-child
        border-right 1px solid superlight
        .label
          left 20px
    .autocomplete .options
    .datepicker .calendar
      left -(WIDTH / 2)

  .add-task
    margin-top 26px
    margin-left -20px
    width WIDTH
    height 54px
    background #FAFAFA
    color main-color
    font-size 22px
    font-weight 300
    font-family FONT
    border none
    border-top 1px solid superlight

input[type=range]
  -webkit-appearance none
  margin 20px/2 0
  width 100%

  &:focus
    outline: none

  &::-webkit-slider-runnable-track
    width 100%
    height 2px
    cursor pointer
    transition 0.2s
    background superlight
    cursor default

  &::-webkit-slider-thumb
    height 20px
    width 20px
    border-radius 100%
    cursor default
    position  relative
    background-image url('img/track-dot.svg')
    background-color white
    background-repeat no-repeat
    background-position center center
    box-shadow 0 1px 5px superlight, 0 0 0 1px rgba(black,.1)
    margin-top -9px
    -webkit-appearance none

  &:focus::-webkit-slider-runnable-track
    background: lighten(light, 5%)
