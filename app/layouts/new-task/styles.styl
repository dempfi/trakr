@import '../../styles/constants'
input-height = 65px

header.new-task
  .action
    background-image: url('img/close.svg')

main.new-task
  transition .25s
  overflow hidden
  label
    min-height input-height
    display block
    position relative
    padding-top input-height
    transition .25s
    input
      absolute left top
      width 100%; height input-height
      padding 35px 0 14px 20px
      font 600 13px/16px sec-font
      color blackl
      outline none
      &[type='range']
        margin 0
      &:focus + .label
      &:valid + .label
        font-size 13px; font-weight 400
        top 10px
      &:focus ~ .line
        thin-border main-color

    .label
      absolute left 20px top 21px
      font 300 16px/19px def-font
      transition all 0.25s
      height 19px
      color light

    .line
      absolute left top (input-height - 1px) right
      thin-border()
      height 0

    &.range
      height 75px

  .two-inputs
    white-space nowrap
    label
      width 50%
      display inline-block
      vertical-align top
      &:first-child
        border-right 1px solid superlight
      &:last-child
        width 100%
    .autocomplete .options
    .datepicker .calendar
      margin-left -50%

  .add-task
    width 100%; height 50px
    background main-color
    font 600 20px/24px sec-font
    border none; color white

  label
    .project-item
      position relative
      .name
        color light
        font-weight 400
        white-space nowrap
        text-overflow ellipsis
        max-width 210px
        overflow hidden
        display inline-block
      .symbol
        absolute right top
        color light
        font-weight 500
    .project-not-found
      display table
      font-size 18px
      font-weight 300
      color light
      width 100%
      padding 0 30px
      text-align center
      height 100%
      > div
        display table-cell
        vertical-align middle
      strong
        color dark
        font-weight 500





input[type=range]
  -webkit-appearance none
  margin 20px/2 0
  width 100%

  &:focus
    outline: none

  &::-webkit-slider-runnable-track
    width 100%
    height 2px
    cursor pointer
    transition 0.2s
    background superlight
    cursor default

  &::-webkit-slider-thumb
    height 20px
    width 20px
    border-radius 100%
    cursor default
    position  relative
    background-image url('img/track-dot.svg')
    background-color white
    background-repeat no-repeat
    background-position center center
    box-shadow 0 1px 5px superlight, 0 0 0 1px rgba(black,.1)
    margin-top -9px
    -webkit-appearance none

  &:focus::-webkit-slider-runnable-track
    background: lighten(light, 5%)
