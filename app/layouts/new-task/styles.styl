@import '../../styles/constants'

.new-task
  background white
  width 100%

  .row
    height 60px
    box-shadow inset 0 -1px SOLITUDE
    display block
    position  relative
    input
      width 100%
      height 100%
      border none
      font-size 14px
      font-weight 500
      font-family FONT
      padding-top 31px
      padding-bottom 12px
      line-height 17px
      &[type='range']
        margin 0
      &:focus
        border-bottom 2px solid FLUSH
        outline none
        padding-bottom 10px

      &:focus + .placeholder
      &:valid + .placeholder
        top 14px
        font-size 12px

    .placeholder
      absolute left top 22px
      color SLATE
      font-size 14
      transition all 0.2s

  .two-inputs
    .row
      width 50%
      display inline-block
      vertical-align top
      &:first-child
        border-right 1px solid SOLITUDE
      &:last-child
        padding-left 20px
        .placeholder
          left 20px


track()
  width 100%
  height 2px
  cursor pointer
  animate 0.2s
  background: SOLITUDE
  border-radius: 5px

thumb()
  height 20px
  width 20px
  border-radius 100%
  cursor pointer
  position  relative
  background url('img/track-dot.svg') no-repeat center center WHITE
  border 1px solid SOLITUDE
  box-shadow 0 1px 5px SOLITUDE


input[type=range]
  -webkit-appearance none
  margin 20px/2 0
  width 100%

  &:focus
    outline: none

  &::-webkit-slider-runnable-track
  &::-moz-range-track
    track()

  &::-webkit-slider-thumb
  &::-moz-range-thumb
    thumb()
    -webkit-appearance: none
    margin-top: 9px

  &:focus::-webkit-slider-runnable-track
    background: lighten(SOLITUDE, 5%)